{% extends 'base.html.twig' %}

{% block stylesheets %} <link rel="stylesheet" href="historiqueReunion.css">{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="jumbotron text-center" style="padding:1%">
      
        <h2>Nom: {{ groupe_etu.nom }}</h2>
        <h2>Sujet: {{ groupe_etu.sujet }}</h2>
    </div>
    
 </div> 

<section class ="articles">
        <h1>Historique de vos réunions</h1>
    {% for reunion in reunions %}
        <article>
            <h2>{{ reunion.titre }}</h2>
                <div class="metadata">Ecrit le {{ reunion.create_at | date('d/m/Y') }} à {{ reunion.create_at | date('H:i') }}</div>
                <div class="content">
                    <a href="{{ path('reunion_show', {'id': reunion.id }) }}" class="btn btn-primary">Lire la suite </a>
                </div>
        <article>
    {% endfor %}

</section>
  

{% endblock %}