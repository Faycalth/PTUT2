{% extends "base.html.twig" %}

{% block title 'Gérer les étudiants' %}

{% block body %}
    <div class="container mt-4">
    {% if message!=null %}  
        <div class="alert alert-{{color}}">
        <strong>{{message}}</strong> 
        </div>
    {% endif %}
    <div class="jumbotron text-center">
        <h1>Gérer les étudiants</h1>
    </div>

<-- import etudiant -->   
<div class="col-md-3" >
 
 <a  class="btn btn-primary" data-toggle="collapse" href="#collapse1"  style="border: 1px solid blue">Importer des étudiants</a>
 

 <div id="collapse1" class="panel-collapse collapse" >
    <a  class="btn btn-danger" data-toggle="collapse" href="#collapse2"  style="margin-top:5%;margin-bottom:5%" >IMPORTANT A LIRE AVANT D'IMPORTER!!!</a>
    <br /> 
     <div id="collapse2" class="panel-collapse collapse" >
            kmlnjklnkn
     </div>  
    
    <form enctype="multipart/form-data" action="" method="post">
        <div class="input-row">
            <input type="file"   name="file" id="file" accept=".csv">
          
            <br />
            <button type="submit" id="submit" name="import" class="btn-submit">Import</button>
            <br />
        </div>
    </form>

  </div>

</div>
<-- fin import -->   
    {% for message in app.flashes('success') %}
        <div class = "alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>Groupe</th>
        </tr>
        </thead>
        <tbody>
        
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.email }}</td>
                <td>{{ etudiant.groupe }}</td>
                <td> 
                    <a href="{{ path('admin_edit_etudiant', {id: etudiant.id}) }}" class="btn btn-secondary">Editer</a>
                    
                    <form method="post" action =" {{ path ('admin_delete_etudiant', {id: etudiant.id }) }}" style  = "display: inline-block" onsubmit = "return confirm ('Vous allez supprimer un étudiant !')">
                        <input type = "hidden" name = "_method" value = "DELETE">
                        <input type = "hidden" name = "_token" value = "{{ csrf_token('delete' ~ etudiant.id) }}">
                        <button class = "btn btn-danger"> Supprimer </button>
                    </form>

                </td>
                </tr>
        {% endfor %}
        </tbody>
        </table>

        <div class = "text-right">
            <a href = "{{ path('fos_user_registration_register') }}" class="btn btn-primary" >Créer un étudiant </a>
        </div>

    </div>
    
{% endblock %}